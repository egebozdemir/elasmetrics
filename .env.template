# Environment Configuration Template
# Copy this file to .env, .env.staging, or .env.production and fill in your values

# Environment (STAGING or PRODUCTION)
ENV=STAGING

# Logging Configuration
LOG_LEVEL=INFO

# Elasticsearch Configuration
ES_HOSTS=http://localhost:9200
ES_USERNAME=
ES_PASSWORD=
ES_API_KEY=
ES_TIMEOUT=30
ES_VERIFY_CERTS=false

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=elasticsearch_metrics
MYSQL_USER=root
MYSQL_PASSWORD=changeme
MYSQL_CHARSET=utf8mb4
MYSQL_POOL_SIZE=5
MYSQL_POOL_RECYCLE=3600

# Metrics Configuration (JSON format)
# Optional: Override metrics config from YAML
# METRICS_CONFIG={"index_stats":["docs.count","store.size_in_bytes"],"batch_size":100}

# Index Patterns (comma-separated)
# Optional: Override include/exclude patterns
# METRICS_INCLUDE_PATTERNS=*
# METRICS_EXCLUDE_PATTERNS=.security*,.kibana*,.monitoring*,.watcher*,.ml*

# Scheduling Configuration
SCHEDULING_ENABLED=false
SCHEDULING_CRON=0 2 * * *
SCHEDULING_TIMEZONE=Europe/Istanbul

# Local Development Mode
# Set to true when running locally without cloud services
LOCAL_DEV_MODE=false

# Airflow Integration
# When running as Airflow DAG, this can be used to override config
# CONFIG_JSON=
