{
  "elasticsearch": {
    "hosts": [
      "http://localhost:9200"
    ],
    "username": "elastic",
    "password": "changeme",
    "timeout": 30,
    "verify_certs": false
  },
  "mysql": {
    "host": "localhost",
    "port": 3306,
    "database": "elasticsearch_metrics",
    "user": "root",
    "password": "changeme",
    "charset": "utf8mb4",
    "pool_size": 5,
    "pool_recycle": 3600
  },
  "metrics": {
    "index_stats": [
      "docs.count",
      "docs.deleted",
      "store.size_in_bytes",
      "pri.store.size_in_bytes",
      "creation.date.string",
      "store.size.human",
      "pri.store.size.human"
    ],
    "include_patterns": [
      "*"
    ],
    "exclude_patterns": [
      ".security*",
      ".kibana*",
      ".monitoring*",
      ".watcher*",
      ".ml*"
    ],
    "batch_size": 100
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/elastic_metrics.log",
    "console": true
  },
  "scheduling": {
    "enabled": false,
    "cron": "0 2 * * *",
    "timezone": "Europe/Istanbul"
  }
}

